<div class="alert alert-block" data-bind="visible: !controlViewModel.keycontrolPossible()">
    <strong>Warning: </strong> Keyboard Control is not available. Please check OctoPrint settings.
</div>
<div data-bind="visible: controlViewModel.keycontrolPossible()">
    <div id="customkeyboardcontrolSettingsModal" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 data-bind="text: 'Edit key for ' + editingName()"></h3>
        </div>
        <div class="modal-body form-horizontal" data-bind="foreach: editingKeys">
            <span data-bind="text: $data"></span>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">{{ _('Done') }}</button>
        </div>
    </div>
    <div class="row-fluid">
        <span class="span2"></span>
        <div class="span2">
            <i class="fas fa-arrow-up"></i> (Y+)<br>
            <span data-bind="text: settingsViewModel.settings.plugins.customkeyboardcontrol.yinc"></span><br>
            <button class="btn btn-primary"><i class="fas fa-edit" data-toggle="modal" href=""></i></button>
        </div>
        <span class="span2"></span>
        <span class="span2"></span>
        <div class="span2">
            <i class="fas fa-arrow-up"></i> (Z+)
            <span data-bind="text: settingsViewModel.settings.plugins.customkeyboardcontrol.zinc"></span><br>
            <button class="btn btn-primary"><i class="fas fa-edit"></i></button>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <i class="fas fa-arrow-left"></i> (X-)
            <span data-bind="text: settingsViewModel.settings.plugins.customkeyboardcontrol.xdec"></span><br>
            <button class="btn btn-primary"><i class="fas fa-edit"></i></button>
        </div>
        <div class="span2">
            <i class="fas fa-home"></i> (XY HOME)
            <span data-bind="text: settingsViewModel.settings.plugins.customkeyboardcontrol.xyhome"></span><br>
            <button class="btn btn-primary"><i class="fas fa-edit"></i></button>
        </div>
        <div class="span2">
            <i class="fas fa-arrow-right"></i> (X+)
            <span data-bind="text: settingsViewModel.settings.plugins.customkeyboardcontrol.xinc"></span><br>
            <button class="btn btn-primary"><i class="fas fa-edit"></i></button>
        </div>
        <span class="span2"></span>
        <div class="span2">
            <i class="fas fa-home"></i> (Z HOME)
            <span data-bind="text: settingsViewModel.settings.plugins.customkeyboardcontrol.zhome"></span><br>
            <button class="btn btn-primary"><i class="fas fa-edit"></i></button>
        </div>
    </div>
    <div class="row-fluid">
        <span class="span2"></span>
        <div class="span2">
            <i class="fas fa-arrow-down"></i> (Y-)
            <span data-bind="text: settingsViewModel.settings.plugins.customkeyboardcontrol.ydec"></span><br>
            <button class="btn btn-primary"><i class="fas fa-edit"></i></button>
        </div>
        <span class="span2"></span>
        <span class="span2"></span>
        <div class="span2">
            <i class="fas fa-arrow-down"></i> (Z-)
            <span data-bind="text: settingsViewModel.settings.plugins.customkeyboardcontrol.zdec"></span><br>
            <button class="btn btn-primary"><i class="fas fa-edit"></i></button>
        </div>
    </div>
    <div data-bind="visible: false">
        <!-- ko foreach: controlViewModel.distances -->
        <button type="button" class="btn distance" data-bind="text: $data"></button>
        <!-- /ko -->
    </div>
</div>